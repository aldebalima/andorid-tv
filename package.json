{
  "name": "smart-tv-web",
  "version": "1.0.0",
  "description": "Aplicação web para transformar notebook em Smart TV com controle remoto via celular",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop tv-dos-lima",
    "pm2:restart": "pm2 restart tv-dos-lima",
    "pm2:logs": "pm2 logs tv-dos-lima",
    "pm2:status": "pm2 status",
    "build:exe": "pkg package.json --targets node18-win-x64 --output tv-dos-lima.exe"
  },
  "keywords": [
    "smart-tv",
    "kiosk",
    "remote-control"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "public/**/*"
    ],
    "assets": [
      "public/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  }
}
